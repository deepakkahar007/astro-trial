---
import { Image } from "astro:assets";
import { ServicesData } from "../constant";
import { ArrowRight } from "../assets";
---

<div class="mt-32 w-full px-4 flex flex-col items-center mb-4">
  <h1 class="text-4xl font-bold text-black text-center mb-14">Services</h1>

  <div class="grid grid-cols-3 gap-5 w-full px-4">
    {
      ServicesData.map(({ id, title, description }) => (
        <div
          class={`p-8 flex flex-col  items-center gap-5 shadow-2xl rounded-2xl border-blue-700`}
        >
          <h1 class="text-2xl font-bold ">{title}</h1>

          <p class="w-72 text-lg">{description}</p>
          <div class="flex items-end w-full">
            <button>
              <Image
                src={ArrowRight}
                alt={"arrow right"}
                width={20}
                height={20}
              />
            </button>
          </div>
        </div>
      ))
    }
  </div>

  <div class="my-18">
    <button class="btn btn-primary text-xl font-bold btn-wide"
      >Consult for free</button
    >
  </div>

  <div class="rounded-2xl p-14 border w-full bg-[#2302ff]">
    <h1 class="text-center text-2xl font-bold text-white">
      Digital Application
    </h1>
  </div>
</div>
